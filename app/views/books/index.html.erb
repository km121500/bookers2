<div class="container">
  
   <% if @book.errors.any? %>
     <div class="text-danger">
     <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
      <% end %>
      </ul>
       </div>  
   <% end %>
   
  <div class="row">
      <!--画面右側-------------------------------------->
     <div class="col-lg-3">

       <!--部分テンプレート-->
       <%= render 'books/list', book: @book , user: @user%>
       <!--部分テンプレート-->
      </div>

      <!--画面左側------------------------------------------>
      <div class="col-lg-9 mt-3">
        <h2>Books</h2>
          <table class="table">
              <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>

              </tr>
            </thead>

              <tbody>
                <% @books.each do |book| %>
               <tr>
                 <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class:"exmaple-hoge", fallback: "no_image.jpg" %></td>
                 <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
                 <td><%= book.body %></td>
                 

               </tr>
               <% end %>
              </tbody>


          </table>
      </div>
  </div>  <!-- この行を追加 -->
</div>    <!-- この行を追加 -->