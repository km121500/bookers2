  <div class="container"> 
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h2>User info</h2>
              <% if @user.errors.any? %>
                  <div class="text-danger">
                     <h2><%= @user.errors.count %>errors prohibited this book from being saved:</h2>
                    <ul>
                      <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>  
              <% end %>
              
            <%= form_with model:@user, local:true do |f| %>
            <!--名前-->
            <div class="form-group">
              <label for="use_name">Name</label>
              <%= f.text_field :name, autofocus: true ,class: "form-control name" %>
            </div>
            <!--画像-->
             <div class="form-group">
             <label for="user_image">image</label>
             <%= f.attachment_field :profile_image, class: "form-control-file user_image" %>
             </div>
            <!--紹介文-->
              <div class="form-group">
              <label for="inputImage">introduction</label>
              <%= f.text_area :introduction  ,class: "form-control introduction" %>
              </div>
            <!--ボタン--> 
              <div class="form-group">
              <%= f.submit "Update User" ,class: "btn btn-secondary" %>
               </div>
            <% end %>
      </div>
    </div>
  </div>   